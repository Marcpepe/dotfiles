set scrolloff=20

" Adjust to AZERTY
nmap z w
nmap Z W

" nmap az aw
nmap yaz yaw
nmap caz caw
nmap daz daw

" nmap iz iw
nmap yiz yiw
nmap ciz ciw
nmap diz diw

nmap yz yw
nmap yZ yW
nmap cz cw
nmap cZ cW
nmap dz dw
nmap dZ dW

" " Remaps w
" nnoremap <M-e> w
" Remaps B
nnoremap <M-i> B
" Remaps W
nnoremap <M-o> W
" Remaps W
nmap m ;

" Remap jj to exit Insert mode
inoremap jj <ESC>
